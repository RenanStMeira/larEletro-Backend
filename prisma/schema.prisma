// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id String @id @default(uuid())
  name String
  email String @unique
  contact String
  password String
  adress String
  createdAt DateTime @default(now()) @map("createAdt")
  updatedAt DateTime? @updatedAt

  schedulings Scheduling[]
  jobs Jobs[]

  @@map("users")
}

model Admin {
  id String @id @default(uuid())
  name String
  email String @unique
  contact String
  password String
  cnpj String @unique
  createdAt DateTime @default(now()) @map("createAdt")
  updatedAt DateTime? @updatedAt

  // Relação com os serviços prestados pelos administradores
  jobs Jobs[]

  @@map("admin")
}

model Jobs {
  id String @id @default(uuid())
  name String
  description String @unique
  price String
  createdAt DateTime @default(now()) @map("createAdt")
  updatedAt DateTime? @updatedAt

  // Relação com o usuário (cliente ou administrador) que presta este serviço
  user Users? @relation(fields: [userId], references: [id])
  userId String?

  // Relação com o administrador que criou este serviço
  admin Admin? @relation(fields: [adminId], references: [id])
  adminId String?

  @@map("jobs")
}

model Scheduling {
  id String @id @default(uuid())
  name String
  email String
  contact String
  messageuser String
  dateService String
  createdAt DateTime @default(now()) @map("createAdt")
  updatedAt DateTime? @updatedAt

  // Relação com o usuário que fez o agendamento
  user Users? @relation(fields: [userId], references: [id])
  userId String?

  @@map("scheduling")
}