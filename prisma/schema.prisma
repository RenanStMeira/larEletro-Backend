// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id String @id @default(uuid())
  name String
  email String @unique
  contact String
  password String
  adress String
  createAdt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@map("users")
}

model Admin {
  id String @id @default(uuid())
  name String
  email String @unique
  contact String
  password String
  cnpj String @unique
  createAdt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@map("admin")
}